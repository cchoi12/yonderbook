<h4 class="white-text">Your "<%= @shelf_name %>" shelf</h4>
<p class="white-text">Of these books, <%= @women*100/(@women + @men) %> % are written by women and <%= @men*100/(@women + @men) %>% are written by men.</p>
<div class="row">
  <div class="cards-container">
    <% @isbnset.each do |isbn| %>
      <div class="card hoverable horizontal">
        <div class="card-image">
          <img src="<%= isbn[1] %>">
        </div>
        <div class="card-content">
          <small><%= isbn[2] %></small>
          <br>
          <small><em><%= isbn[3] %></em></small>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<% if flash[:error] %>
  <script type="text/javascript">
    Materialize.toast("<%= flash[:error] %>", 4000)
  </script>
<% end %>
